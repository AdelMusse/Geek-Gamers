<div class="container py-5">
  <div class="row">
    <div class="col-md-12">
      <h2 class="text-center text-white mb-4">Rigister With Geek Gamers </h2>
      <div class="row">
        <div class="col-md-6 mx-auto">

          <!-- form card login -->
          <div class="card rounded-0">
            <div class="card-header">
              <h3 class="mb-0">Sign Up</h3>
            </div>
            <div class="card-body">
              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), class: "p-4") do |f| %>

              <%= f.error_notification %>
              <div class="form-group">
                <label for="name">Full name</label>
                <input type="text" class="form-control form-control-lg rounded-0" id="name" placeholder="Full name">
              </div>
              <div class="form-group">
                <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form-control" }, class:"form-control form-control-lg rounded-0"%>
              </div>
              <div class="form-group">
                <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", class: "form-control" }, class:"form-control form-control-lg rounded-0"  %>
              </div>
              <div class="form-group">
                <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" }, class:"form-control form-control-lg rounded-0" %>
              </div>
              <%= f.button :submit, "Sign Up",class: "btn btn-success btn-lg float-right" %>
              </form>
            </div>
            <!--/card-block-->
            <div class="card-footer">
              <div class="d-flex justify-content-center links">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
          <!-- /form card login -->

        </div>


      </div>
      <!--/row-->

    </div>
    <!--/col-->
  </div>
  <!--/row-->
</div>
<!--/container-->
<% end %>