<main id="main" class="grid-container" role="main">
    <section id="cover" class="text-center p-5">
        <div class="middle-container">
            <div class="right-side">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <%= image_tag("god-of-war.jpg", class:"radius d-block w-100")%>
                        </div>
                        <div class="carousel-item">
                            <%= image_tag("infamous.png", class:"radius d-block w-100")%>
                        </div>
                        <div class="carousel-item">
                            <%= image_tag("NeedForSpeedPayback.jpg", class:"radius d-block w-100")%>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="left-side">
                <div class="jumbotron jumbotron-fluid">
                    <div class="container">
                        <h1 class="display-4">Games for everyone</h1>
                        <p class="lead">Geek Gamers is the ultimate destination for playing.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<footer id="sticky-footer" class="py-4 bg-light text-white-50">
    <div class="container text-center">
        <small>Copyright &copy; Geek Gamers</small>
    </div>
</footer>